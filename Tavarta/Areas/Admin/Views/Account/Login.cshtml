@using System.Web.Optimization
@using CaptchaMvc.HtmlHelpers
@using Microsoft.Web.Mvc
@using Microsoft.Web.Mvc.Html
@using Tavarta.Common.Extentions
@using Tavarta.Common.HtmlHelpers
@model Tavarta.ViewModel.Account.LoginViewModel
@{
    ViewBag.Title = "ورود به سیستم";
}
@section Scripts
{
      <script type="text/javascript">
    $.noConflict();

    jQuery(document).ready(function($) {
        // Code that uses jQuery's $ can follow here.
        $(function () {
            $('#Re').next().remove();

        });
    });
    
    // Code that uses other library's $ can follow here.
</script>
}




<!-- start: BODY -->
<body class="login">
    <!-- start: LOGIN -->
    <div class="row" style="margin-top: -80px">
        <div class="main-login col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-5 col-md-offset-4 col-md-pull-2">
            <div class="logo margin-top-30 ">
                   
                                <a href="http://tv3.ir" target="_blank">
                                    @*<img src="~/images/سایت12.png" height="90" width="200"  />*@
                                    <h3 class="col-md-push-4" style="font-family: Samim-Bold; font-size: 16px">پایگاه خبری تحلیلی</h3>
                                    <h1  style="font-family: iran; color: #0057a0 ">تاورتا</h1>
                                    </a>
                               
                          
            </div>
            <!-- start: LOGIN BOX -->
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="box-login">
                    <fieldset>
                        <legend>
                            ورود به سایت
                        </legend>
                        <p>
                            لطفا نام کاربری و پسورد خود را وارد کنید
                        </p>
                        <div class="form-group">
                            <span class="input-icon">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "نام کاربری", autocomplete = "off" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                <i class="fa fa-user"></i>
                            </span>
                        </div>
                        <div class="form-group form-actions">
                            <span class="input-icon">
                                @Html.FormControlPasswordFor(m => m.Password)
                                <i class="fa fa-lock"></i>
                                <a class="forgot" href="login_forgot.html">
                                    رمز خود را فراموش کرده اید؟
                                </a>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </span>
                        </div>
                        <div class="form-actions">
                            <div id="temp" class="checkbox foo  clip-check check-primary">

                                @Html.CheckBoxFor(m => m.RememberMe, new { @id = "Re" })

                                @Html.LabelFor(m => m.RememberMe, new { @for = "Re" })
                            </div>




                            <button type="submit" data-loading-text="در حال ارسال اطلاعات" class="btn btn-primary pull-right">
                                ورود <i class="fa fa-arrow-circle-left"></i>
                            </button>
                        </div>




                        <div class="new-account">
                            اگر اکانت ندارید؟

                            
                            <a href="@Url.Action("Create","User",new {area="admin"})">
                                
                                عضو شوید
                            </a>
                        </div>
                    </fieldset>
                    <!-- start: COPYRIGHT -->
                    <div class="copyright">
                        &copy; <span class="current-year"></span><span class="text-bold text-uppercase"> تمامی حقوق مطلق به سایت تاورتا است</span>. <span>  </span>
                    </div>
                    <!-- end: COPYRIGHT -->
                </div>
				<!-- end: LOGIN BOX -->
            }
           
        </div>
    </div>
    <!-- start: MAIN JAVASCRIPTS -->

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/vendor/modernizr/modernizr.js"></script>
    <script src="~/vendor/jquery-cookie/jquery.cookie.js"></script>
    <script src="~/vendor/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/vendor/switchery/switchery.min.js"></script>
    <!-- end: MAIN JAVASCRIPTS -->
    <!-- start: JAVASCRIPTS REQUIRED FOR THIS PAGE ONLY -->
    <script src="~/vendor/Chart.js/Chart.min.js"></script>
    <script src="~/vendor/jquery.sparkline/jquery.sparkline.min.js"></script>
    <!-- end: JAVASCRIPTS REQUIRED FOR THIS PAGE ONLY -->
    <!-- start: CLIP-TWO JAVASCRIPTS -->
    <script src="~/Content/assets/js/main.js"></script>

    <!-- start: JavaScript Event Handlers for this page -->
<script src="~/Content/assets/js/index.js"></script>
    

<script>
    jQuery(document).ready(function() {
        Main.init();
        Index.init();
    });
</script>

     

<!-- end: JavaScript Event Handlers for this page -->
    <!-- end: CLIP-TWO JAVASCRIPTS -->
</body>
<!-- end: BODY -->
</html>

