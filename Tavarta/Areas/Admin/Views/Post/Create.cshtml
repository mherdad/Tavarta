@model Tavarta.ViewModel.Posts.AddPostViewModel

<div class="row">
<div class="main-login col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-4 col-md-pull-1">
 <div class="box-register">
 <div class="modal-body">

     @using (Html.BeginForm("Create", "Post"))
     {

          <fieldset>
                        <legend>
                           درج نوشته جدید
                        </legend>
                       
                        <div class="row form-group">

                            @Html.LabelFor(m => m.HeadTitle, new {@class = "col-md-3 control-label"})
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.HeadTitle, new {@class = "form-control", placeholder = "نام کاربری", autocomplete = "off"})
                                @Html.ValidationMessageFor(m => m.HeadTitle, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="row form-group">
                            @Html.LabelFor(m => m.Title, new {@class = "col-md-3 control-label"})
                            <div class="col-md-9">
                                @Html.TextBoxFor(x => x.Title, new {@class = "form-control", @placeholder = "نام کاربر"})
                                @Html.ValidationMessageFor(m => m.Title, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="row form-group">
                            @Html.LabelFor(m => m.TagNames, new {@class = "col-md-3 control-label"})
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.TagNames)
                                @Html.ValidationMessageFor(m => m.TagNames, "", new {@class = "text-danger"})
                            </div>
                        </div>
                          <div class="row form-group">

                            @Html.LabelFor(m => m.Body, new {@class = "col-md-3 control-label"})
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Body, new {@class = "form-control", placeholder = "نوشته", autocomplete = "off"})
                                @Html.ValidationMessageFor(m => m.Body, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="row pull-left">
                            <div class="row form-group ">
                                <div class="col-md-12 col-md-pull-1 " >
                                    <button data-loading-text="در حال ارسال اطلاعات" class="btn btn-primary btn-md" type="submit">ثبت کاربر</button>
                                    @*<button type="button" id="createUserButton" autocomplete="off" onclick="AjaxForm.CustomSubmit(this, 'createUserForm')" data-loading-text="در حال ارسال اطلاعات" class="btn btn-success btn-md">
                                        ثبت کاربر
                                    </button>*@
                                    <button class="btn btn-default btn-md" data-dismiss="modal" aria-hidden="true">
                                        انصراف
                                    </button>
                                </div>
                            </div>
                        </div>
                    </fieldset>



     }

 </div>
 </div>
</div>
</div>