@model Tavarta.ViewModel.Comments.AddCommentsViewModel

@using (Html.BeginForm("AddPostComments", "Comment", FormMethod.Post))
{

    <div class="post-block post-leave-comment border-top border-dark">
        <h3>ارسال نظر</h3>
        <form action="" type="post">
            <div class="row">
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(x => Model.Title)
                        @Html.TextBoxFor(x => Model.Title, new { @class = "form-control" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(x => Model.Email)
                        @Html.TextBoxFor(x => Model.Email, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(x => Model.Body)
                        @Html.TextAreaFor(x => Model.Body, new { @class = "form-control", maxlength = "5000", rows = "10" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button style="margin-top: 5px; margin-bottom: 5px;" class="btn btn-primary btn-wide  margin-top-15 pull-right"  type="submit"> <span>ارسال نظر</span></button>
                   @* <a href="blog_post.html" class="btn btn-primary btn-wide btn-scroll btn-scroll-top fa-arrow-right margin-top-15 pull-right" data-caption-class="fadeIn" data-caption-delay="900"> <span>ارسال نظر</span> </a>*@
                </div>
            </div>
        </form>
    </div>

}