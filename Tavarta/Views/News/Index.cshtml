@using AttributeRouting.Helpers
@using DNT.Extensions
@model Tavarta.ViewModel.News.NewsListViewModel
@section scripts
{
    <script type="text/javascript">

        $('#temp').addClass('active');
    </script>
}
<h1>@ViewBag.te</h1>
<main class="col-xs-12 col-md-8 ">

    <!--Carousel-->
    <div class="row">
        <div class="col-xs-12 col-sm-12">
            <div id="news-slider" class="widget carousel slide" data-ride="carousel" data-lazyload="true">
                <ol class="carousel-indicators">
                    <li data-target="#news-slider" data-slide-to="0" class="active numbers">1</li>
                    <li data-target="#news-slider" data-slide-to="1" class=" numbers ">2</li>
                    <li data-target="#news-slider" data-slide-to="2" class=" numbers">3</li>
                    <li data-target="#news-slider" data-slide-to="3" class=" numbers">4</li>
                    <li data-target="#news-slider" data-slide-to="4" class=" numbers">5</li>
                    <li data-target="#news-slider" data-slide-to="4" class=" numbers">6</li>
                </ol>
                <div class="carousel-inner">

                    @{ Html.RenderPartial("_CarouselListAjax", Model);}
                </div>
                <a class="right carousel-control" href="#news-slider" data-slide="next">
                    <span class="glyphicon glyphicon-menu-right"></span>
                </a>
                <a class="left carousel-control" href="#news-slider" data-slide="prev">
                    <span class="glyphicon glyphicon-menu-left"></span>
                </a>
            </div>
        </div>
    </div>
    <!--/Carousel-->
    <!--Ads Box-->
    <div class="row">
        <div class="col-xxs-12 col-xs-12 col-sm-12">
            <div class="widget widget-bordered widget-clear ads-boxes-wrapper">
                <div class="content">
                    <div class="ads-boxes">
                        <div class="ad-box-wrapper">
                            <div class="ads-box text-center" data-adzone="leaderboard">
                            </div>
                            <i class="ads-box-close fa fa-times"></i>
                        </div>
                        @*<div class="ad-box-wrapper">
                                <div class="ads-box text-center">
                                    <script type="text/javascript" src="http://ads.goldiran.ir/showad.aspx?s=58&u=635816268298929319"></script>
                                </div>
                                <i class="ads-box-close fa fa-times"></i>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/Ads Box-->
    <!--Last news-->
    <div class="row">
        <div class="col-xs-12 col-sm-12">
            <div class="widget widget-bordered title-a hot-news">
                <h2>
                    آخرین اخبار
                </h2>
                <div class="content">
                    <div class="row">
                        @{ Html.RenderPartial("_LastNewsAjax", Model);}
                    </div>
                    <br />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <!--Sport-->
        <div class="col-xxs-12 col-xs-6 col-sm-6">
            <div id="polling" class="polling poll-widget widget widget-bordered title-a">
                <h2>
                    ورزشی
                </h2>

                <div class="content padding-xx" id="poll-result-placeholder">
                    @{ Html.RenderPartial("_SportListAjax", Model);}
                </div>
            </div>
        </div>
        <!--/Sport-->
        <!--Environment-->
        <div class="col-xxs-12 col-xs-6 col-sm-6">
            <div id="polling" class="polling poll-widget widget widget-bordered title-a">
                <h2>
                    محیط زیست
                </h2>
                <div class="content padding-xx" id="poll-result-placeholder">
                    @{ Html.RenderPartial("_EnvironmentListAjax", Model);}
                </div>
            </div>
        </div>
        <!-- /Environment -->
    </div>

    <br />

    <div class="row">
        <!--HealthEvents -->
        <div class="col-xxs-12 col-xs-6 col-sm-6">
            <div id="polling" class="polling poll-widget widget widget-bordered title-a">
                <h2>
                    سلامت و حوادث
                </h2>
                <div class="content padding-xx" id="poll-result-placeholder">
                    @{ Html.RenderPartial("_HealthEventsListAjax", Model);}
                </div>
            </div>
        </div>
        <!--/HealthEvents-->
        <!--Literary-->
        <div class="col-xxs-12 col-xs-6 col-sm-6">
            <div id="polling" class="polling poll-widget widget widget-bordered title-a">
                <h2>
                    ادبی
                </h2>
                <div class="content padding-xx" id="poll-result-placeholder">
                    @{ Html.RenderPartial("_LiteraryListAjax", Model);}
                </div>
            </div>
        </div>
        <!--/Literary-->
    </div>

    <!--latest Video-->
    <br />
    <div class="row">
        <div class="col-xs-12 col-sm-12">
            <div class="widget widget-bordered title-a widget-thumbnail videogallerylistwidget">
                <h2>
                    گالری تصاویر
                </h2>
                <div class="content videogallerylist">
                    <div class="row">
                        @{ Html.RenderPartial("_PhotoGalleryListAjax", Model);}

                        <div class="col-xs-6 col-sm-6 col-md-3">
                            <div class="thumbnail blank-box">
                                <div class="blank-box-row">
                                    <div class="blank-box-cell">
                                        <span class=" glyphicon glyphicon-camera"></span>
                                        <span class="glyphicon small glyphicon-plus"></span>
                                        <a href="frontcms/video/list">
                                            <span class="text">
                                                تصاویر بیشتر
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- /latest Video-->
</main>
<!--/Last news-->

<aside class="col-xs-12 col-md-4">

    <!--Note-->
    <div class="row">
        <div class="col-xxs-12 col-xs-12 col-sm-12">
