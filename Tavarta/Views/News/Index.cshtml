                <h2 class="">یاداشت ها</h2>
                <div class="content">
                    <div class="ads-boxes">

                        <div class="row" style="margin-top: 15px;margin-right: 3px">
                            @{ Html.RenderPartial("_NotesListAjax", Model);}

                            <div class="col-md-5 col-xs-5 col-xxs-6">

                                <a href="Index.cshtml">
                                    <h3 style="color: #304FFE;">
                                        سایر یادداشت
                                        <i class="fa fa-angle-left"></i>
                                    </h3>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/Note-->
    <!--MostViewed-->
    <div class="row">
        <div class="col-xxs-12 col-xs-12 col-sm-12">
            <div class="widget widget-bordered  ads-boxes-wrapper title-a latest-news-widget">
                <h2 class="">پربازدیدترین ها</h2>
                <div class="content">
                    <div class="ads-boxes">

                        <div class="row">
                            <br />
                            @{ Html.RenderPartial("_MostViewedListAjax", Model);}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--MostViewed-->
    <!--Nezar sangi-->
    <div class="row">
        <div class="col-xxs-12 col-xs-12 col-sm-12">
            <div class="widget widget-bordered  ads-boxes-wrapper title-a latest-news-widget">
                <h2 class=""> نظرسنجی</h2>
                <div class="content padding-xx" id="poll-result-placeholder">
                    <div class="col-xs-12">
                        <h4>
                            آیا از عملکرد سایت در سال 1394 راضی هستید؟
                        </h4>
                    </div>
                    <div class="col-xs-12">
                        بله
                        <div class="progress">
                            <div class="progress-bar progress-bar-success progress-bar-striped progress progress-striped active progress-xs" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width: 79.927346115035%;">
                                80%
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12">
                        خیر
                        <div class="progress">
                            <div class="progress-bar progress-bar-success progress-bar-striped progress progress-striped active progress-xs" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width: 20.072653884965%;">
                                20%
                            </div>
                        </div>
                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Nezar sangi-->
    <!-- LastArticle -->
    <div class="row">
        <div class="hidden-xxs hidden-xs col-sm-12" id="main-news-sidebar">
            <div class="widget widget-bordered title-a latest-news-widget">
                <h2 class="">
                    آخرین مطالب
                </h2>
                <div role="tabpanel">
                    <div class="latest-news">
                        <ul class="padding-x nav nav-tabs nav-justified" role="tablist">
                            <li role="presentation" class="  active">
                                <a href="#news-all" data-toggle="tab">همه</a>
                            </li>
                            <li role="presentation" class="  ">
                                <a href="#news-internal" data-toggle="tab">استان بوشهر</a>
                            </li>
                            <li role="presentation" class="  ">
                                <a href="#news-external" data-toggle="tab">ایران و جهان</a>
                            </li>

                            <li role="presentation" class="  special ">
                                <a href="#news-special" data-toggle="tab">اختصاصی</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="news-all">
                                <ul class="list zebra">
                                    @foreach (var tt in Model.LastArticle)
                                    {
                                        if (tt.Category.Name == "اختصاصی")
                                        {

                                            <li>
                                                <time class="special" datetime="">
                                                    @tt.PublishedOn.TimeOfDay.ToHHMM()
                                                </time>
                                                <span class="text-default fa fa-video-camera"></span>
                                                <a target="_blank" href="@Url.Action("Details", new {tt.Id})" class="detail">

                                                    @tt.Title
                                                </a>
                                            </li>

                                        }
                                        else if (tt.Category.Name == "گالری تصاویر")
                                        {
                                            <li>
                                                <time class="" datetime="">
                                                    @tt.PublishedOn.TimeOfDay.ToHHMM()
                                                </time>
                                                <span class="text-default fa fa-camera"></span>
                                                <a target="_blank" href="@Url.Action("Details", new {tt.Id})" class="detail">

                                                    @tt.Title
                                                </a>
                                            </li>
                                        }
                                        else
                                        {

                                            <li>
                                                <time class="" datetime="">
                                                    @tt.PublishedOn.TimeOfDay.ToHHMM()
                                                </time>

                                                <a target="_blank" href="@Url.Action("Details", new {tt.Id})" class="detail">
                                                    @tt.Title
                                                </a>
                                            </li>
                                        }

                                    }
                                </ul>
                            </div>

                            <div role="tabpanel" class="tab-pane" id="news-internal">
                                <ul class="list zebra">
                                    @foreach (var tt in Model.LastArticle)
                                    {
                                        if (tt.Category.Name == "استان بوشهر")
                                        {

                                            <li>
                                                <time class="" datetime="">
                                                    @tt.PublishedOn.TimeOfDay.ToHHMM()
                                                </time>

                                                <a target="_blank" href="@Url.Action("Details", new {tt.Id})" class="detail">

                                                    @tt.Title
                                                </a>
                                            </li>

                                        }

                                    }
                                </ul>
                            </div>

                            <div role="tabpanel" class="tab-pane" id="news-external">
                                <ul class="list zebra">
                                    @foreach (var tt in Model.LastArticle)
                                    {
                                        if (tt.Category.Name == "ایران و جهان")
                                        {

                                            <li>
                                                <time class="" datetime="">
                                                   @tt.PublishedOn.TimeOfDay.ToHHMM()
                                                </time>
                                                <span class="text-default fa fa-video-camera"></span>
                                                <a target="_blank" href="@Url.Action("Details", new {tt.Id})" class="detail">
                                                    @tt.Title
                                                </a>
                                            </li>

                                        }

                                    }
                                </ul>
                            </div>

                            <div role="tabpanel" class="tab-pane" id="news-special">
                                <ul class="list zebra">
                                    @foreach (var tt in Model.LastArticle)
                                    {
                                        if (tt.Category.Name == "اختصاصی")
                                        {

                                            <li>
                                                <time class="special" datetime="">
                                                  @tt.PublishedOn.TimeOfDay.ToHHMM()
                                                </time>
                                                <span class="text-default fa fa-video-camera"></span>
                                                <a target="_blank" href="@Url.Action("Details", new {tt.Id})" class="detail">

                                                    @tt.Title
                                                </a>
                                            </li>

                                        }

                                    }
                                </ul>
                            </div>

                            @*@{ Html.RenderPartial("_LatestArticlesAjax", Model);}*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- LastArticle -->
</aside>